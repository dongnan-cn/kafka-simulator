<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="consumerGroupPanel" spacing="10.0" xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.nan.kafkasimulator.controller.ConsumerGroupPanelController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <!-- 消费者组标题栏 -->
    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <Label text="消费者组: " style="-fx-font-weight: bold;" />
        <Label fx:id="consumerGroupIdLabel" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="showPartitionAssignmentButton" text="查看分区分配" />
    </HBox>

    <!-- 消息接收区域 -->
    <VBox fx:id="messageArea" VBox.vgrow="ALWAYS">
        <Label text="收到的消息:" style="-fx-font-weight: bold;" />
        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
            <content>
                <TextArea fx:id="messageTextArea" editable="false" wrapText="true" />
            </content>
        </ScrollPane>
    </VBox>


    <!-- 操作按钮区域 -->
    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Button fx:id="addConsumerButton" text="添加一个消费者实例" />
        <Button fx:id="stopConsumerGroupButton" text="停止消费者组" />
        <Button fx:id="resumeConsumerGroupButton" text="恢复消费者组" disable="true" />
    </HBox>

    <!-- 分割线 -->
    <Separator prefWidth="Infinity" />
</VBox>