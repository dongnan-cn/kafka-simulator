<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="consumerGroupPanel" spacing="10.0" xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.nan.kafkasimulator.controller.ConsumerGroupPanelController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <!-- Consumer group title bar -->
    <HBox spacing="10.0" alignment="CENTER_LEFT">
        <Label text="Consumer Group: " style="-fx-font-weight: bold;" />
        <Label fx:id="consumerGroupIdLabel" />
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="showPartitionAssignmentButton" text="View Partition Assignment" />
    </HBox>

    <!-- Message receiving area -->
    <VBox fx:id="messageArea" VBox.vgrow="ALWAYS">
        <Label text="Received Messages:" style="-fx-font-weight: bold;" />
        <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
            <content>
                <TextArea fx:id="messageTextArea" editable="false" wrapText="true" />
            </content>
        </ScrollPane>
    </VBox>


    <!-- Operation button area -->
    <HBox spacing="10.0" alignment="CENTER_RIGHT">
        <Button fx:id="addConsumerButton" text="Add Consumer Instance" />
        <Button fx:id="manualCommitButton" text="Manual Commit Offset" visible="false" />
        <Button fx:id="stopConsumerGroupButton" text="Stop Consumer Group" />
        <Button fx:id="resumeConsumerGroupButton" text="Resume Consumer Group" disable="true" />
    </HBox>

    <!-- Separator -->
    <Separator prefWidth="Infinity" />
</VBox>