<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" spacing="10.0"
    VBox.vgrow="SOMETIMES"
    fx:controller="com.nan.kafkasimulator.controller.ProducerController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <children>
        <Label text="Producer">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <TabPane fx:id="producerTabPane" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
            <tabs>
                <Tab fx:id="defaultTab" text="Please Select Topic">
                    <content>
                        <VBox spacing="10.0" alignment="CENTER">
                            <children>
                                <Label text="Connect to Kafka cluster and create topics from the left to configure the producer" />
                            </children>
                        </VBox>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</VBox>