<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.nan.kafkasimulator.MainController">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>

    <Label text="请输入 Kafka 集群地址 (e.g., localhost:9092):" />
    <TextField fx:id="bootstrapServersField" promptText="bootstrap.servers" />
    <Button onAction="#onConnectButtonClick" text="连接 Kafka" />

    <Label text="日志:" />
    <TextArea fx:id="logArea" editable="false" wrapText="true" VBox.vgrow="ALWAYS" />
</VBox>